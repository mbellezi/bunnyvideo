<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/bunnyvideo/db" VERSION="2026022702" COMMENT="Arquivo XMLDB para Moodle mod_bunnyvideo"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="bunnyvideo" COMMENT="Armazena instâncias da atividade Bunny Video">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="embedcode" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Código HTML de incorporação do Bunny"/>
        <FIELD NAME="completionpercent" TYPE="int" LENGTH="3" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Porcentagem necessária para a conclusão (0-100). 0 ou NULL significa desabilitado."/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="course" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="bunnyvideo_progress" COMMENT="Rastreia o progresso de conclusão dos alunos independentemente da tabela course_modules_completion">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="bunnyvideoid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID da instância bunnyvideo"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID do usuário"/>
        <FIELD NAME="completionmet" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 se o aluno atingiu o critério de conclusão"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="bunnyvideoid" TYPE="foreign" FIELDS="bunnyvideoid" REFTABLE="bunnyvideo" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="bunnyvideoid_userid" UNIQUE="true" FIELDS="bunnyvideoid, userid" COMMENT="Índice único para busca rápida por instância e usuário"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
